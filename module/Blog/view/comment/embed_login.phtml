$item = $this->item;
$formAction = $this->formAction ? $this->formAction : $this->uri('/blog/comment/');
?>

<?if($item['commentStatus'] == 'open'):?>
<?if($item['commentType'] == 'local'):?>

<?
$form = new Blog\Form\CommentCreateForm();
