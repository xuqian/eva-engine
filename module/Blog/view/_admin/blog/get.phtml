<script>
eva.ready(function(){
      
    eva.callback.connect = function(item, parentWindow){
        $("#file-form-fileconnectform-file-id").val(item.attr("data-connect-id"));
        var data = $.parseJSON(item.attr('data-connect-json'));
        $("#post-image").attr("src", data.Thumb);
